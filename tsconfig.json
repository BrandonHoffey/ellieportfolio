{
  "compilerOptions": {
    "target": "ES2016" /* Set the JavaScript language version for emitted JavaScript */,
    "module": "commonjs" /* Use the CommonJS module system for Node.js-style imports/exports */,
    "rootDir": "./src" /* Point to your source folder where TypeScript files are located */,
    "outDir": "./dist" /* Output folder for compiled JavaScript files */,
    "sourceMap": true /* Generate source maps for debugging */,
    "removeComments": true /* Remove comments from the emitted JavaScript */,
    "esModuleInterop": true /* Enable better compatibility with CommonJS modules */,
    "forceConsistentCasingInFileNames": true /* Enforce consistent casing in file names */,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
